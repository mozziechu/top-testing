<!--pages/reporting-details/reporting-details.wxml-->
<!-- 期中汇报详情 -->

<view>
  <i-row>
    <i-col offset="1" span="22" i-class="class1">
      <i-row i-class="material">
        <i-col style="margin-top:10px" offset="1" span="22" i-class="list">
          <view>
            <view style='font-size:18px;margin-top:10px;'>
              {{item.subjectname}}
            </view>
          </view>
        </i-col>

        <i-col offset="1" span="8" i-class="particulars">
          <view style='font-size:14px;margin-top:10px;'>工作进度:</view>
        </i-col>
        <i-col span="14" i-class="particulars">
          <view style='font-size:14px;margin-top:10px;'>{{item.workprogress}}</view>
        </i-col>

        <i-col offset="1" span="8" i-class="particulars">
          <view style='font-size:14px;margin-top:10px;'>工作态度:</view>
        </i-col>
        <i-col span="14" i-class="particulars">
          <view style='font-size:14px;margin-top:10px;'>{{item.workattitude}}</view>
        </i-col>

        <i-col offset="1" span="8" i-class="particulars">
          <view style='font-size:14px;margin-top:10px;'>工作质量:</view>
        </i-col>
        <i-col span="14" i-class="particulars">
          <view style='font-size:14px;margin-top:10px;'>{{item.workquality}}</view>
        </i-col>

        <i-col offset="1" span="8" i-class="particulars">
          <view style='font-size:14px;margin-top:10px;'>问题:</view>
        </i-col>
        <i-col span="14" i-class="particulars">
          <view style='font-size:14px;margin-top:10px;'>{{item.question}}</view>
        </i-col>

      </i-row>
    </i-col>
  </i-row>
</view>