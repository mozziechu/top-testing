<i-tab-bar current="{{ current }}" bindchange="handleChange" fixed='true'>
  <i-tab-bar-item key="tutor-main" icon="homepage" current-icon="homepage_fill" title="信小助"></i-tab-bar-item>
  <i-tab-bar-item key="tutor-plan" icon="activity" current-icon="activity_fill" title="安排"></i-tab-bar-item>
